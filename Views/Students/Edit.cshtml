@model Uspevaemost.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>
<h5>@ViewBag.Message</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZachetkaId" />
            <div class="form-group">
                <label asp-for="Zachetka" class="control-label"></label>
                <input asp-for="Zachetka" class="form-control" />
                <span asp-validation-for="Zachetka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fio" class="control-label"></label>
                <input asp-for="Fio" class="form-control" />
                <span asp-validation-for="Fio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStud" class="control-label"></label>
                <input asp-for="DateStud" class="form-control" />
                <span asp-validation-for="DateStud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idgroup" class="control-label"></label>
                <select asp-for="Idgroup" class="form-control" asp-items="ViewBag.Idgroup"></select>
                <span asp-validation-for="Idgroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
